<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mine_teacher_header_ly"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/xel_mine_head_bg"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.7"
                        android:padding="10dp">

                        <com.neusoft.sample.Ctrl.wenchengcheng.RoundImageView
                            android:id="@+id/mine_teacher_avatar_iv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@drawable/usericon_default"
                            imagecontrol:border_inside_color="#fff7f2e9"
                            imagecontrol:border_outside_color="#ffd5d1c8"
                            imagecontrol:border_thickness="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.175"
                        android:gravity="center"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/mine_teacher_username_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="top"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textColor="#3d3d3d"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:typeface="monospace" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#79d8e7"
                            android:text="老师"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mine_teacher_motto_tv"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.125"
                        android:background="#4b4d4d4d"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="这里放简介"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:weightSum="2.998">

                    <LinearLayout
                        android:id="@+id/mine_teacher_notify_ly"
                        style="@style/single_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.998"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="通知中心"
                            android:textAlignment="center"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.001"
                        android:background="#e5e5e5" />

                    <LinearLayout
                        android:id="@+id/mine_teacher_rankList_ly"
                        style="@style/single_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.998"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="龙虎榜"
                            android:textAlignment="center"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.002"
                        android:background="#e5e5e5" />

                    <LinearLayout
                        android:id="@+id/mine_teacher_coach_ly"
                        style="@style/single_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.998"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="特长辅导"
                            android:textAlignment="center"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_teacher_body_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    style="@style/wrap_layout"
                    android:visibility="visible">
                    <!-- 上圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_courseBuy_ly"
                        style="@style/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_goodpassage" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp"
                            android:text="课程购买" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/wrap_layout">
                    <!-- 上圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_passageReview_ly"
                        style="@style/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_goodpassage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp"
                            android:text="优秀作文赏析"/>

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                    <!-- 分割线 -->
                    <View style="@style/bg_line" />
                    <!-- 下圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_bookRecommend_ly"
                        style="@style/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_goodbook" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="好书推荐(老师版)"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>

                    <View style="@style/bg_line" />

                    <LinearLayout
                        android:id="@+id/mine_teacher_publishHomeWork_ly"
                        style="@style/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_goodbook" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="发布作业"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>

                    <!-- 分割线 -->
                    <View style="@style/bg_line" />
                    <!-- 下圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_bookReview_ly"
                        style="@style/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_afterread" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="读后感"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout style="@style/wrap_layout">
                    <!-- 上圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_necessaryPoem_ly"
                        style="@style/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_poem" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="必背古诗词目录"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                    <!-- 分割线 -->
                    <View style="@style/bg_line" />

                    <!-- 下圆角-->
                    <LinearLayout
                        android:id="@+id/mine_teacher_expandPoem_ly"
                        style="@style/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_poem_extend" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="拓展古诗词目录"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout style="@style/wrap_layout">

                    <LinearLayout
                        android:id="@+id/mine_teacher_personalSetting_ly"
                        style="@style/single_layout"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_setting" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="个人设置"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/bg_line" />
                <!-- 全圆角-->
                <LinearLayout style="@style/wrap_layout">

                    <LinearLayout
                        android:id="@+id/mine_teacher_feedback_ly"
                        style="@style/single_layout"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_feedback" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="帮助与反馈"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout style="@style/wrap_layout">

                    <LinearLayout
                        android:id="@+id/mine_teacher_checkForUpdate_ly"
                        style="@style/single_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/xel_mine_checkupdate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="检测更新"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/mine_teacher_version_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:paddingRight="5dp"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout style="@style/wrap_layout">

                    <LinearLayout
                        android:id="@+id/mine_teacher_exit_ly"
                        style="@style/single_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/power_48px" />

                        <TextView
                            android:id="@+id/poweroff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="退出"
                            android:textColor="@color/text_clo"
                            android:textSize="16dp" />

                        <ImageView
                            style="@style/img_arrow"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>