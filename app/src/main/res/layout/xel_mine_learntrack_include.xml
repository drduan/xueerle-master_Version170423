<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <TextView

                style="@style/subject_type_title_1"
                android:layout_gravity="center"
                android:text="学习轨迹" />

            <View style="@style/subject_type_title_line" />

            <LinearLayout style="@style/subject_type_spinner_layout">

                <Spinner
                    android:id="@+id/learnTrack_year_month"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_item"/>
                <Spinner
                    android:id="@+id/learnTrack_type"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/spinner_item"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/learnTrack_go"
                style="@style/start_btn"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/start_icon_selector" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>