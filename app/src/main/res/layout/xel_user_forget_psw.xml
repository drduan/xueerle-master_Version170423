<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundwithlogin"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="e学慧"
                    android:textColor="#000"
                    android:textSize="54sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="310dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/boderbar_nor_all"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:text="手 机"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/forget_phone"
                            android:layout_width="fill_parent"
                            android:layout_gravity="center"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:hint="请输入手机号码"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <!--<requestFocus />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line20"
                        android:layout_width="310dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/boderbar_nor_all"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:text="类 型"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spinner_update"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boderbar_nor_all"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="验证码"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/forget_yanzhengma"
                        android:layout_width="110dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890*#_-@"
                        android:hint="输入验证码"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:paddingLeft="3dip"
                        android:singleLine="true"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/user_phoneyangzhengma"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/borderbar_code_shape"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boderbar_nor_all"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="密 码"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/forget_password1"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="请输入新密码"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textSize="18sp" />
                    <!--<requestFocus />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boderbar_nor_all"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="重复密码"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/forget_password2"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="请重复密码"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textSize="18sp" />

                    <!--<requestFocus />-->
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <Button
                        style="@style/btn_style"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_layout_shape"
                        android:onClick="update_true"
                        android:text="重置密码"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
