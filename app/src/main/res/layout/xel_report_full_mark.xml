<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="@color/zhuti">

            <ImageButton
                android:id="@+id/left__"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back" />

            <com.neusoft.sample.View.AlwaysMarqueeTextView
                android:id="@+id/titlefull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/boder"
                android:gravity="center">

                <TextView
                    android:id="@+id/repot_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成绩报告单"
                    android:textColor="@color/background_color1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/boder"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="100分"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 题目来源："
                            android:textStyle="bold"
                            android:id="@+id/item_resourcefull"
                            android:textColor="@color/background_color1"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/full_zhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第一章"
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/full_jie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第一节"
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/full_zu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第一z组"
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text=" 题目统计："
                            android:textStyle="bold"
                            android:id="@+id/tongjifull"
                            android:textColor="@color/background_color1"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总题数："
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/right_full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="共30题 "
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正确数："
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/success_full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="错误数："
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/error_full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/background_color1"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text=" 本组用时："
                            android:id="@+id/yongshifull"
                            android:textStyle="bold"
                            android:textColor="@color/background_color1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time_full"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="用时:200秒"
                            android:textColor="@color/background_color1"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_cha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text=" 与本市的第一名仅差："
                            android:textStyle="bold"

                            android:textColor="@color/background_color1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/chatime_full"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text=""
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_cha_miao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="毫秒"

                            android:textColor="@color/background_color1"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/nextquestion"
                        style="@style/wrap_layout_btn"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="下一组" />

                    <Button
                        android:id="@+id/againchallenge"
                        style="@style/wrap_layout_btn"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="挑战"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>