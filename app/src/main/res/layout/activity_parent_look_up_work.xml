<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parent_look_up_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neusoft.sample.View.xel_mine.MyHomeWork.ParentLookUpWork">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/zhuti"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/back_in_mywork1"
            android:src="@drawable/back"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="查看已发布作业"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#333"
            android:layout_height="50dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择日期："
            android:layout_marginTop="15dp"
            android:textColor="@color/background_color1"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/bg_btn_shape"
            android:layout_marginLeft="15dp"
            android:id="@+id/datatime1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择班级："
            android:layout_marginTop="30dp"
            android:textColor="@color/background_color1"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_btn_shape"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/classaddcontainer1"
                android:orientation="horizontal"
                android:layout_height="50dp">

            </RadioGroup>
        </HorizontalScrollView>

    </LinearLayout>


    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="查看"
        android:id="@+id/btn_check"
        android:background="@drawable/bg_btn_shape"
        />



    <ListView
        android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/lookupworklist1"
    >

</ListView>
</LinearLayout>
